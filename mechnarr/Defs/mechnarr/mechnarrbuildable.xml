<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleBuildDef ParentName="VehicleBaseBuildable">
		<defName>mechnarr_blueprint</defName>
		<label>MechN.A.R.R Blueprint</label>
		<description> A MechN.A.R.R suit frame under construction</description>
		<researchPrerequisites>
        <li>MicroelectronicsBasics</li>
        <!-- Add more <li> entries for additional required research projects -->
		</researchPrerequisites>
		<altitudeLayer>Building</altitudeLayer>
		<graphicData>
			<texPath>building/mechnarr/buildingblueprint</texPath>
			<!--  need to add temp textures, names follow "temp_east" and "temp_north" schema, of that end name being the one used to find all-->
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,1)</drawSize>
		</graphicData>

	<statBases>
			<MaxHitPoints>1300</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>0.05</Flammability>
	</statBases>
	<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
	<size>(2,1)</size>
	<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
	<constructEffect>ConstructMetal</constructEffect>
	<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
	<passability>Impassible</passability>
	<fillPercent>1</fillPercent>
	<neverMultiSelect>true</neverMultiSelect>
	<clearBuildingArea>true</clearBuildingArea>
	<category>Building</category>
	<rotatable>false</rotatable>
	<blockWind>true</blockWind>
	<useHitPoints>true</useHitPoints>
	<thingToSpawn>mechnarr_pawn</thingToSpawn>
	<costList>
        <li>
            <thingDef>Steel</thingDef> <!-- Required resource -->
            <count>100</count> <!-- Required quantity -->
        </li>

	</Vehicles.VehicleBuildDef>

</Defs>