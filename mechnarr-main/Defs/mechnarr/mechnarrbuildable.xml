<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleBuildDef ParentName="VehicleBaseBuildable">
		<defName>mechnarr_blueprint</defName>
		<label>MechN.A.R.R Blueprint</label>
		<description>A MechN.A.R.R suit frame under construction</description>
		
		<altitudeLayer>Building</altitudeLayer>
		<graphicData>
			<texPath>building/mechnarr/buildingblueprint</texPath>
			<!--  need to add temp textures, names follow "temp_east" and "temp_north" schema, of that end name being the one used to find all-->
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,3)</drawSize>
		</graphicData>
		<designationCategory>VVE_Vehicles</designationCategory>
	<statBases>
			<MaxHitPoints>1300</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>0.05</Flammability>
	</statBases>
	
	<size>(2,3)</size>
	
	<researchPrerequisites>
	Microelectronics
	</researchPrerequisites>
	
	<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
	<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
	<passability>Impassable</passability>
	<rotatable>false</rotatable>
	<blockWind>true</blockWind>
	<useHitPoints>true</useHitPoints>
	<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
	<thingToSpawn>mechnarr_pawn</thingToSpawn>
	<costList>
		<ComponentIndustrial>30</ComponentIndustrial>
		<Steel>500</Steel>
		<chemfuel>100</chemfuel>
	</costList>

	</Vehicles.VehicleBuildDef>

</Defs>